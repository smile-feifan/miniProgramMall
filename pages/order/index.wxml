<Tabs tabs="{{tabs}}" bindtabsItemChange="handleItemChange">
  <view class="order_main">
    <view class="order_item" wx:for="{{orders}}" wx:key="goods_id">
      <view class="order_num_row">
        <view>订单编号</view>
        <view>{{item.order_number}}</view>
      </view>
      <view class="order_price_row">
        <view class="order_price_text">订单价格</view>
        <view class="order_price_value">￥{{item.order_price}}</view>
      </view>
      <view class="order_date_wrap">
        <view class="order_date_text">订单日期</view>
        <view class="order_date_value">{{item.create_time_cn}}</view>
      </view>
    </view>
  </view>
</Tabs>
