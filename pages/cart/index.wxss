.receive_address_row .address_btn {
  padding: 20rpx;
}
.receive_address_row .address_btn button {
  width: 60%;
}
.receive_address_row .user_info_row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid var(--themeColor);
}
.cart_content .cart_title {
  font-size: 38rpx;
  padding: 20rpx;
}
.cart_content .cart_main .cart_item {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.cart_content .cart_main .cart_item navigator.cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item navigator.cart_img_wrap image {
  width: 100%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_edit {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_edit .num_edit {
  display: flex;
  width: 55rpx;
  height: 55rpx;
  border: 1rpx solid #ccc;
  align-items: center;
  justify-content: center;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_edit .num {
  display: flex;
  width: 55rpx;
  height: 55rpx;
  align-items: center;
  justify-content: center;
}
.footer_tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
}
.footer_tool .all_chk_wrap {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer_tool .total_price_wrap {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--themeColor);
  font-size: 32rpx;
}
