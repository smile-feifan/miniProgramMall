Page {
  background-color: #f3f0f0;
}
.fb_main {
  color: #666;
}
.fb_main .fb_title {
  padding: 20rpx;
  font-size: 35rpx;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  background-color: #fff;
  padding: 10rpx;
  margin: 20rpx 10rpx;
  text-align: center;
}
.fb_main .fb_content {
  background-color: #fff;
  margin: 10rpx;
}
.fb_main .fb_content textarea {
  padding: 20rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
}
.fb_main .fb_content .fb_tool button {
  margin-left: 10rpx;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 10rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  margin-right: 10rpx;
}
.fb_main .form_btn_wrap button {
  margin: 0;
}
.fb_main .form_btn_wrap button icon {
  vertical-align: middle;
}
